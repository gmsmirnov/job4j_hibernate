<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="ru.job4j.gsmirnov.models.Car" table="car">
        <id name="id" column="id">
            <generator class="identity"/>
        </id>
        <property name="name" column="name"/>

        <many-to-one name="body" class="ru.job4j.gsmirnov.models.Body" column="body_id" lazy="false"/>
        <many-to-one name="engine" class="ru.job4j.gsmirnov.models.Engine" column="engine_id" lazy="false"/>
        <many-to-one name="transmission" class="ru.job4j.gsmirnov.models.Transmission" column="transmission_id" lazy="false"/>
    </class>
</hibernate-mapping>