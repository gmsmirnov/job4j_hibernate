<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                      http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <!--Controllers-->
    <servlet>
        <servlet-name>tasksController</servlet-name>
        <servlet-class>ru.job4j.gsmirnov.controllers.TasksController</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>tasksController</servlet-name>
        <url-pattern>/tasks</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>tasksListController</servlet-name>
        <servlet-class>ru.job4j.gsmirnov.controllers.TasksListController</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>tasksListController</servlet-name>
        <url-pattern>/listAll</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>addTaskController</servlet-name>
        <servlet-class>ru.job4j.gsmirnov.controllers.AddTaskController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>addTaskController</servlet-name>
        <url-pattern>/addTask</url-pattern>
    </servlet-mapping>

    <!--Listeners-->
    <listener>
        <listener-class>ru.job4j.gsmirnov.listeners.AppDestructionListener</listener-class>
    </listener>
</web-app>